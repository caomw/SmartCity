<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp" >

    <TextView
        android:id="@+id/tv_reply_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="回复意见"
        android:textColor="@color/text_orange"
        android:textSize="@dimen/text_size_hint" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reply_title"
        android:layout_marginTop="5dp"
        android:src="@drawable/shape_line" />

    <TextView
        android:id="@+id/tv_reply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_line"
        android:layout_margin="5dp"
        android:text="回复意见"
        android:textColor="@color/main_primary"
        android:textSize="@dimen/text_size_hint" />

    <TextView
        android:id="@+id/tv_reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reply_content"
        android:layout_margin="5dp"
        android:text="2015-08-25"
        android:textColor="@color/main_primary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_reply_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_reply_content"
        android:layout_margin="5dp"
        android:text="常熟市民网"
        android:visibility="gone"
        android:textColor="@color/text_orange"
        android:textSize="12sp" />

</RelativeLayout>