<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gv"
        >

    <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="16dip">

        <ImageView
                android:id="@+id/iv_head"
                android:layout_width="38.0dip"
                android:layout_height="38.0dip"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app_phonecharge"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/app_name"/>

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_head"
                android:maxLines="1"
                android:text="威海市民"
                android:textColor="@color/main_primary"
                android:textSize="@dimen/text_size_title"/>

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_toRightOf="@id/rl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dip">

        <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="办理中"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/main_hint"
                android:textSize="@dimen/text_size_hint"/>
        <TextView
                android:id="@+id/tv_title"
                android:layout_toLeftOf="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="公交站点是不是可以变更位置啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
                android:textColor="@color/main_primary"
                android:textSize="@dimen/text_size_title"/>
        <TextView
                android:id="@+id/tv_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="听说是可以改的对嘛听说是可以改的对嘛听说是可以改的对嘛听说是可以改的对嘛听说是可以改的对嘛听说是可以改的对嘛听说是可以改的对嘛听说是可以改的对嘛听说是可以改的对嘛"
                android:textColor="@color/main_primary"
                android:textSize="@dimen/text_size_info"/>

        <TextView
                android:id="@+id/tv_ask_date"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-08-06 20:29:18"
                android:textColor="@color/main_hint"
                android:textSize="@dimen/text_size_hint"/>
        <TextView
                android:id="@+id/tv_ask_location"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/tv_ask_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="威海市人民路"
                android:textColor="@color/main_hint"
                android:textSize="@dimen/text_size_hint"/>

    </RelativeLayout>


    <RelativeLayout
            android:layout_below="@id/rl_right"
            android:layout_alignLeft="@+id/rl_right"
            android:layout_alignRight="@+id/rl_right"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/main_line">
        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在回复中"
                android:textColor="@color/main_hint"
                android:textSize="@dimen/text_size_hint"/>
    </RelativeLayout>
</RelativeLayout>