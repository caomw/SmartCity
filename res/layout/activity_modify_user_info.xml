<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@color/whitesmoke">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_fifteen_dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_fifteen_dp">
        <View
                android:background="@color/main_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/min_width"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/main_primary"
                    android:text="实名认证："/>

            <TextView
                    android:id="@+id/tv_is_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/main_primary"
                    android:text="未认证"/>
        </LinearLayout>
        <View
                android:background="@color/main_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/min_width"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/main_primary"
                    android:text="真实姓名："/>

            <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入姓名"
                    android:textColorHint="@color/main_hint"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/main_primary"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>
        <View
                android:background="@color/main_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/min_width"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/main_primary"
                    android:text="性别："/>

                <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                                android:text="男"
                                android:textSize="@dimen/text_size_list"
                                android:textColor="@color/main_primary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <RadioButton
                                android:text="女"
                                android:textSize="@dimen/text_size_list"
                                android:textColor="@color/main_primary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                </RadioGroup>

        </LinearLayout>
        <View
                android:background="@color/main_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/min_width"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/main_primary"
                    android:text="生日："/>

            <TextView
                    android:id="@+id/tv_birthday"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/main_hint"
                    android:text="请选择出生日期"/>
        </LinearLayout>
        <View
                android:background="@color/main_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/min_width"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/text_size_list"
                    android:text="所在地："/>

            <EditText
                    android:id="@+id/et_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入所在地"
                    android:textColorHint="@color/main_hint"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/main_primary"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_list"/>
        </LinearLayout>
        <View
                android:background="@color/main_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/min_width"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/text_size_list"
                    android:text="手机号码："/>

            <TextView
                    android:id="@+id/tv_phone"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/main_primary"
                    android:text="189****1234"/>
        </LinearLayout>
        <View
                android:background="@color/main_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_hight"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="@dimen/min_width"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_primary"
                    android:textSize="@dimen/text_size_list"
                    android:text="邮箱："/>

            <TextView
                    android:id="@+id/tv_email"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/main_primary"
                    android:text="--"/>
        </LinearLayout>
        <View
                android:background="@color/main_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_fifteen_dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title"
                android:padding="@dimen/padding_eight_dp"
                android:background="@color/base_blue"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                android:layout_marginRight="@dimen/margin_fifteen_dp"
                android:text="保存"/>
    </LinearLayout>

</ScrollView>
